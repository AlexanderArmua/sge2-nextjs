datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["prismaSchemaFolder"]
}

// Necessary for Next auth
model Account {
    id                       String  @id @default(cuid())
    userId                   String  @map("usuario_id")
    type                     String  @map("tipo")
    provider                 String  @map("proveedor")
    providerAccountId        String  @map("proveedor_id")
    refresh_token            String? @map("token_refreso")
    access_token             String? @map("token_acceso")
    expires_at               Int?    @map("expira")
    token_type               String? @map("tipo_token")
    scope                    String?
    id_token                 String? @map("token_id")
    session_state            String? @map("estado_sesion")
    user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
    refresh_token_expires_in Int?    @map("expira_refreso")

    @@unique([provider, providerAccountId])
    @@map("cuenta_de_usuario")
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique @map("token_sesion")
    userId       String   @map("usuario_id")
    expires      DateTime @map("expira")
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@map("sesion")
}

model VerificationToken {
    identifier String   @map("identificador")
    token      String   @unique
    expires    DateTime @map("expira")

    @@unique([identifier, token])
    @@map("token_verificacion")
}

model Sede {
    id Int @id @default(autoincrement())

    nombre String @unique

    cursos       Curso[]
    equipos      Equipo[]
    laboratorios Laboratorio[]
    libros       Libro[]
}
